<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource name="jdbc/MyDB"
              auth="Container"
              type="javax.sql.DataSource"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;autoReconnect=true&amp;serverTimezone=UTC"
              username="${DB_USER}"
              password="${DB_PASS}"
              maxTotal="20"
              maxIdle="5"
              minIdle="2"
              maxWaitMillis="10000"/>
</Context>

